{
  "name": "step_4",
  "version": "1.0.0",
  "description": "TechShop SUT with JUnit reporting and custom HTML/Confluence report generation",
  "main": "index.js",
  "scripts": {
    "dev": "vite --open sut/index.html --port 8888",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:report": "playwright test && playwright show-report",
    "test:ci": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "show-report": "playwright show-report",
    "generate-reports": "node report-generator.js",
    "test:full": "npm run test && npm run generate-reports",
    "open-html-report": "start reports/custom-report.html"
  },
  "keywords": [
    "playwright",
    "testing",
    "e-commerce",
    "vite",
    "automated-testing"
  ],
  "author": "manuelhintermayr",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "vite": "^5.0.0",
    "xml2js": "^0.6.2"
  }
}
